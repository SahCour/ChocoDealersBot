# ============================================
# CHOCODEALERS BOT CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# TELEGRAM BOT
# ============================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# Admin Telegram IDs (comma-separated)
# Find your ID by messaging @userinfobot on Telegram
ADMIN_TELEGRAM_IDS=123456789,987654321

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# For local development:
# DATABASE_URL=postgresql://user:password@localhost:5432/chocodealers

# For Railway (auto-provided):
# DATABASE_URL=${DATABASE_URL}

# For Heroku (auto-provided):
# DATABASE_URL=${DATABASE_URL}

# For Supabase:
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxx.supabase.co:5432/postgres

DATABASE_URL=postgresql://user:password@localhost:5432/chocodealers

# ============================================
# SQUARE API
# ============================================
# Get from: https://developer.squareup.com/apps
SQUARE_ACCESS_TOKEN=EAAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SQUARE_LOCATION_ID=L1234567890ABC
SQUARE_ENVIRONMENT=sandbox  # or 'production'
SQUARE_APPLICATION_ID=sq0idp-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# GOOGLE SHEETS API
# ============================================
# 1. Create project: https://console.cloud.google.com
# 2. Enable Google Sheets API
# 3. Create Service Account
# 4. Download JSON credentials
GOOGLE_CREDENTIALS_FILE=./config/google_credentials.json
GOOGLE_SHEET_ID=1abcdefghijklmnopqrstuvwxyz1234567890ABCDE

# Sheet names for different data types
SHEET_NAME_SALES=Sales
SHEET_NAME_INVENTORY=Inventory
SHEET_NAME_PURCHASES=Purchases
SHEET_NAME_PRODUCTION=Production

# ============================================
# GOOGLE NOTEBOOK LM (Optional)
# ============================================
# For AI-powered analytics and insights
GOOGLE_AI_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NOTEBOOK_LM_PROJECT_ID=your-project-id

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment: development, staging, production
ENVIRONMENT=development

# Timezone
TIMEZONE=Asia/Bangkok

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/chocodealers_bot.log

# ============================================
# SYNC SETTINGS
# ============================================
# Auto-sync intervals (in minutes)
SQUARE_SYNC_INTERVAL=30
SHEETS_SYNC_INTERVAL=60

# Enable/disable auto-sync
ENABLE_AUTO_SYNC_SQUARE=true
ENABLE_AUTO_SYNC_SHEETS=true

# ============================================
# NOTIFICATIONS
# ============================================
# Enable low stock alerts
ENABLE_LOW_STOCK_ALERTS=true
LOW_STOCK_CHECK_INTERVAL=120

# Notification channels (Telegram chat IDs)
NOTIFICATION_CHANNEL_ID=-1001234567890

# ============================================
# OPTIONAL: MONITORING
# ============================================
# Sentry for error tracking (optional)
# SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ============================================
# SECURITY
# ============================================
# Secret key for signing/encryption
SECRET_KEY=your-super-secret-key-change-this-in-production

# Rate limiting
MAX_REQUESTS_PER_MINUTE=30
